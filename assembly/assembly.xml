<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>dsl-pack</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>/</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/groovy/org/devops/</directory>
			<outputDirectory>devops-framework/src/org/devops/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/vars</directory>
			<outputDirectory>devops-framework/vars</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<excludes>
            	<exclude>**/*.jpg</exclude>
         	</excludes>
			<outputDirectory>devops-framework/resources</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
